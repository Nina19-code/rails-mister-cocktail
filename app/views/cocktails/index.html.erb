<div class="container mt-5">
  <h1>Get lost in our awesome cocktail menu</h1>
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
      <% @cocktails.each do |c| %>
      <tr>
        <td><%= c.name  %></td>
        <td><%= link_to 'Show', cocktail_path %></td>
        <td><%= link_to 'Edit', edit_cocktail_path(cocktail) %></td>
        <td><%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
